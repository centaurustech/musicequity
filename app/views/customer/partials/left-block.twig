<div class="user-menu">
    <div class="image-container">
        <div class="profile-picture">
            <a href="{{ profile.type }}/{{ profile.profile_url }}">
                <img src="/profile/picture/{{ profile.picture }}/large" class="img-responsive">
            </a>
        </div>
    </div>
</div>

<div class="block">
    <h3><a href="c/{{ profile.profile_url }}">{% if profile.name is empty %}user{{ profile.profile_url }}{% else %}{{ profile.name }} {% endif %}</a></h3>
    <span class="glyphicon glyphicon-map-marker"></span>
    {% if profile.city is empty and profile.country is empty %}
        No address available
    {% else %}
        {% if profile.city is empty %}
            {{ profile.country }}
        {% else %}
            {{ profile.city }}, {{ profile.country }}
        {% endif %}
    {% endif %}
</div>
<div class="links">
    {% if user %}
        <button class="btn btn-purple" id="faq-btn" style="width:100% !important"><span class="glyphicon glyphicon-question-sign"></span> FAQ</button>
    {% endif %}
    {% if user.id == profile.id %}
    <a href="/customer/settings/"><button class="btn  btn-blue" style="width:100% !important"><span class="glyphicon glyphicon-pencil"></span> Edit Profile</button></a>
    {% endif %}
</div>

<div class="socialblock">
    <ul class="sociallinks">
        <li>
            <img src="assets/images/report.png" alt=""/><a href="#" id="report-btn">Report</a>
        </li>
    </ul>


</div>