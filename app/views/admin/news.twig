{% include 'admin/partials/header' %}
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirmation
            </div>
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a href="/" class="btn btn-danger danger">Delete</a>
            </div>
        </div>
    </div>
</div>

        <!-- start: Content -->
        <div id="content" class="col-sm-11">
            <a class="btn btn-info delete-news pull-right" style="margin-bottom: 30px;" href="admin/news/add">
                <i class="fa fa-pencil"></i> Create New
            </a>
            <div class="clearfix"></div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                    <tr>
                        <th>
                            Title
                        </th>
                        <th>
                            Date
                        </th>
                        <th>
                            Status
                        </th>
                        <th>
                            Actions
                        </th>
                    </tr>
                </thead>
                <tbody>
                    {% for n in news %}
                    <tr>
                        <td>{{ n.title }}</td>
                        <td>{{ n.created_at }}</td>
                        <td>
                            {% if n.status == '1' %}

                                <span class="label label-primary">Published</span>
                            {% else %}
                                <span class="label label-default">Unpublished</span>

                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-warning" href="admin/news/edit/{{ n.id }}">
                                <i class="fa fa-pencil"></i>
                            </a>
                            <a class="btn btn-danger delete-news" data-href="admin/news/{{ n.id }}/delete" data-toggle="modal" data-target="#confirm-delete" href="#">
                                <i class="fa fa-trash-o "></i>
                            </a>
                            {% if n.status == '1' %}
                                <a class="btn btn-info" href="admin/news/unpublish/{{ n.id }}">
                                    <i class="fa fa-eye-slash"></i>
                                </a>
                            {% else %}
                                <a class="btn btn-info" href="admin/news/publish/{{ n.id }}">
                                    <i class="fa fa-eye"></i>
                                </a>
                            {% endif %}

                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>








        </div>
        <!-- end: Content -->


    </div>
    <!--/row-->
</div>





    <div class="clearfix">
    </div>

    <footer>

        <div class="row">

            <div class="col-sm-5">
                &copy; 2014
                <a href="https://musicequity.com">
                    Music Equity
                </a>
            </div>
            <!--/.col-->

            <div class="col-sm-7 text-right">

            </div>
            <!--/.col-->

        </div>
        <!--/.row-->

    </footer>

