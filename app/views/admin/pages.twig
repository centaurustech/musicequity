{% include 'admin/partials/header' %}
<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                Confirmation
            </div>
            <div class="modal-body">
                Are you sure?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a href="/" class="btn btn-danger danger">Delete</a>
            </div>
        </div>
    </div>
</div>

        <!-- start: Content -->
        <div id="content" class="col-sm-11">
            <a class="btn btn-info delete-news pull-right" style="margin-bottom: 30px;" href="admin/pages/add">
                <i class="fa fa-pencil"></i> Create New
            </a>
            <div class="clearfix"></div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Url
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for p in pages %}
                    <tr>
                        <td>{{ p.title }}</td>
                        <td>{{ p.created_at | date('d/m/Y') }}</td>
                        <td><a href="{{ URL.to('/') }}p/{{ p.url }}">Link</a></td>
                        <td>
                            {% if p.status == 1 %}
                            <a class="btn btn-warning delete-news" href="admin/page/{{ p.id }}/unpublish">
                                <i class="fa fa-eye-slash "></i>
                            </a>
                            {% else %}
                                <a class="btn btn-warning delete-news" href="admin/page/{{ p.id }}/publish">
                                    <i class="fa fa-eye"></i>
                                </a>
                            {% endif %}
                            <a class="btn btn-danger delete-news" data-href="admin/page/{{ p.id }}/delete"  data-toggle="modal" data-target="#confirm-delete" href="#">
                                <i class="fa fa-trash-o "></i>
                            </a>
                            <a class="btn btn-info delete-news" href="admin/page/{{ p.id }}/edit">
                                <i class="fa fa-pencil-square-o"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>








        </div>
        <!-- end: Content -->


    </div>
    <!--/row-->
</div>





<div class="clearfix">
</div>

<footer>

    <div class="row">

        <div class="col-sm-5">
            &copy; 2014
            <a href="https://musicequity.com">
                Music Equity
            </a>
        </div>
        <!--/.col-->

        <div class="col-sm-7 text-right">

        </div>
        <!--/.col-->

    </div>
    <!--/.row-->

</footer>

