{% include 'admin/partials/header' %}
<div class="modal fade" id="promote-user" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form action="admin/admins/promote" method="post">
                <div class="modal-header">
                    Promote user
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="control-label" for="user">Select User</label>
                        <div class="controls">
                            <select class="form-control" id="user" name="user">
                                <option value="">Select user</option>
                                {% for u in users %}
                                {% if u.name | length > 0 %}
                                    <option value="{{ u.id }}">{{ u.name }} / {{ u.email }}</option>
                                {% endif %}
                                {% endfor %}
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label" for="access">Grant access</label>
                        <div class="controls">
                            <select class="form-control" id="access" name="access">
                                <option value="moderator">Moderator</option>
                                <option value="full">Administrator</option>
                            </select>
                        </div>
                    </div>


                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                    <button type="submit" role="submit" href="/" class="btn btn-primary">Promote</button>
                </div>
            </form>
        </div>
    </div>
</div>
        <!-- start: Content -->
        <div id="content" class="col-sm-11">
            <button class="btn btn-primary pull-right" id="promote-btn" style="margin-bottom:30px;">Add Admin</button>
            <div class="clearfix"></div>
            <table class="table table-striped table-bordered bootstrap-datatable datatable">
                <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Role
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
                </thead>
                <tbody>
                {% for u in admins %}
                    <tr>
                        <td>{{ u.name }}</td>
                        <td>
                            {% if u.admin_access == 'full' %}
                                <strong>Administrator</strong>
                            {% else %}
                                <strong>Moderator</strong>
                            {% endif %}
                        </td>
                        <td>
                            <a class="btn btn-primary" href="admin/admins/{{ u.id }}/demote" >
                                <i class="fa fa-level-down"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
        <!-- end: Content -->


    </div>
    <!--/row-->
</div>





<div class="clearfix">
</div>

<footer>

    <div class="row">

        <div class="col-sm-5">
            &copy; 2014
            <a href="https://musicequity.com">
                Music Equity
            </a>
        </div>
        <!--/.col-->

        <div class="col-sm-7 text-right">

        </div>
        <!--/.col-->

    </div>
    <!--/.row-->

</footer>

