{% include 'partials/inner-header' %}
<body>
{% include 'partials/modals' %}

<header>
    <nav>
        <div class="container">
            <div class="logo">
                <a href="/"><img class="img-responsive" src="assets/images/logo.png" alt="Music Equity"/></a>
            </div>
            <div class="nav-menu">
                {% include 'partials/menu' %}
            </div>
            <div class="clearfix"></div>
        </div>

    </nav>
</header>
<section class="page">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="block-title">
                    {{ n.title }}
                </div>
                <div class="block-content fullheight addpadding">
                    <div style="float:left">
                        <img src="news/art/{{ n.id }}" alt="">
                    </div>
                    <div style="width:50%; float:left; margin-left:20px;">
                        <div>
                            <h3>
                                {{ n.title }}
                            </h3>
                            <div>
                                Published by: {{ n.user.name }}
                            </div>
                            <div>
                                Date: {{ n.created_at }}
                            </div>
                        </div>
                    </div>
                    <div class="clearfix"></div>
                    <div style="margin-top:30px">{{ n.body | raw }}</div>
                </div>
            </div>
        </div>
    </div>
</section>

{% include 'partials/footer' %}

<script src="https://code.jquery.com/jquery-2.1.1.min.js"></script>
<script src="https://code.jquery.com/ui/1.11.2/jquery-ui.min.js"></script>
<script src="assets/javascripts/bootstrap.js"></script>
<script src="assets/javascripts/backstretch.min.js"></script>
<script src="assets/javascripts/bootstrap-select.min.js"></script>
<script src='/assets/javascripts/jcanvas.min.js'></script>
<script src="assets/javascripts/search.js"></script>

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.13.1/jquery.validate.min.js"></script>
<script>
    user_location = '{{ location.country }}';
    coordinates = [];
    {% for u in users %} coordinates[coordinates.length] = { 'lat': {{ u.lat }}, 'lng': {{ u.lng }}, 'name': '{{ u.artist_name }}' }    ;{% endfor %};
    $(document).ready(function () {

        soundManager.setup({
            url: 'assets/swf/'
        });
    });
</script>
<script src="assets/javascripts/soundmanager2-nodebug-jsmin.js"></script>
<script src="assets/javascripts/main.js"></script>
<script src="//cdn.jsdelivr.net/jquery.marquee/1.3.1/jquery.marquee.min.js" type="text/javascript"></script>
</body>
</html>
